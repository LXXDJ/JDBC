<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment/>
    <entry key="searchStock">
        SELECT * FROM STOCK
        WHERE STK_NAME LIKE CONCAT(?,'%')
    </entry>
    <entry key="insertMember">
        INSERT INTO ACCOUNT (MEM_NAME, MEM_MONEY)
        VALUES (?,?)
    </entry>
    <entry key="updateMoney">
        UPDATE ACCOUNT
        SET MEM_MONEY = MEM_MONEY + ?
        WHERE MEM_NAME = ?
    </entry>
    <entry key="viewallStock">
        SELECT * FROM STOCK
    </entry>
<!--    <entry key="bringMember">-->
<!--        SELECT * FROM ACCOUNT LIMIT 1;-->
<!--    </entry>-->
    <entry key="selectStock">
        SELECT * FROM STOCK
        WHERE STK_NAME = ?
    </entry>
    <entry key="insertTransaction">
        INSERT INTO TRANSACTION (MEM_NAME, STK_NAME, STK_PRICE, STK_COUNT, RESULT)
        VALUES (?, ?, ?, ?, ?)
    </entry>
    <entry key="calcStock">
        SELECT STK_NAME, AVG(STK_PRICE), SUM(STK_COUNT)
        FROM TRANSACTION
        WHERE RESULT = 'Y'
        GROUP BY STK_NAME
    </entry>
</properties>